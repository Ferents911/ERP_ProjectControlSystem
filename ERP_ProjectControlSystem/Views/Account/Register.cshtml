@model ERP_ProjectControlSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>User sign up</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <label asp-for="IsAdmin"></label><br />
        <input type="checkbox" asp-for="IsAdmin" />
        <span asp-validation-for="IsAdmin"></span>
    </div>
    <div>
        <input type="submit" value="Sign up" />
    </div>
</form>


